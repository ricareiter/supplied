<div id="<%= dom_id product %>">
<div class="card">
  <div class="card-header">
    Product Details
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= product.product_name %></h5>
    <p class="card-text">Brand: <%= product.brand %></p>
    <p class="card-text">Quantity: <%= product.quantity %></p>
    <p class="card-text">Price: <%= product.price %></p>
    <div class="mb-3">
    <%= link_to "Back", client_path(@client), class: "btn btn-primary inline-block" %>
    <%= link_to "Edit", edit_client_product_path(@client, @product), class: "btn btn-primary inline-block" %>
    </div>
    <%= button_to "Delete", [@client, @product], method: :delete, class: "btn btn-outline-danger" %> 
  </div>
</div>
</div>