<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title"><%= client.name %></h4>
              <p class="card-category">Products in Stock: <%= client.products.sum(:quantity) %></p>
              <p class="card-category">Amount Spent: $<%= client.products.sum(:price) %></p>
          </div>
          <div class="card-body">
            <%= link_to "Edit", edit_client_path(@client), class: "btn btn-primary inline-block" %>
            <%= link_to "Back", clients_path, class: "btn btn-primary" %>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>